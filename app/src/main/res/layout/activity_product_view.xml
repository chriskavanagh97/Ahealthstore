<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductView">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/cucumbermask" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="192dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cucumber Mask"
            android:textColor="#120000"
            android:textSize="18sp"
            android:id="@+id/name"
            android:textStyle="bold"
            android:inputType="none"
            android:enabled="false">

        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Rating: 4/5"
            android:textColor="#0B0101">
        </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:id="@+id/customernum"
                android:text="rated by 30 customers."
                android:textColor="#090000"
                android:textStyle="italic">

            </TextView>
        </LinearLayout>



        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/price"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="â‚¬4.99"
            android:textColor="#190101"
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="none"
            android:enabled="false">

        </EditText>

        <Button
            android:id="@+id/Cart"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Add to basket">

        </Button>

        <LinearLayout
            android:id="@+id/stocklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:text="Stock Level"
                android:textColor="#070000" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/stocklevel"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="0"
                    android:inputType="none"
                    android:enabled="false"
                    android:textColor="#100000" />

                <Button
                    android:id="@+id/stocklevelbtn"
                    android:layout_width="91dp"
                    android:layout_height="38dp"
                    android:text="submit stock level"
                    android:textSize="8sp">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#020000"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/description"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:enabled="false">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "
                android:textColor="#130000"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:hint="add a rating"
                android:id="@+id/ratingvalue"
                android:textColor="#120101"
                android:textSize="12sp">

            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/addrating"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:text="add rating"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textColor="#0C0000"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="424dp"
            android:layout_height="200dp"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="270dp"
            android:layout_height="63dp"
            android:hint="Add a comment"
            android:id="@+id/comment"
            android:textSize="10sp">

        </EditText>

        <Button
            android:id="@+id/addcomment"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="add comment"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update All product Details" />


</androidx.appcompat.widget.LinearLayoutCompat>