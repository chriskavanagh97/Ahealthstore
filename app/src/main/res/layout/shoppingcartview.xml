<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#80000000"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:paddingBottom="10dp"
        card_view:cardBackgroundColor="#FFFF"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/cardview_compat_inset_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cucumbermask">

            </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:background="#FFFF"
                android:ellipsize="marquee"
                android:maxLines="4"
                android:text="Chris Kavnagh"
                android:textColor="#0F0000"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/description"
                android:layout_width="259dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#FFFF"
                android:ellipsize="marquee"
                android:maxLines="4"
                android:text="This is a fantastic product , it really helped me over come struggles I had with lack of vitamins "
                android:textColor="#0F0000"
                android:textSize="17sp"
                android:textStyle="italic" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/price"
                android:layout_width="102dp"
                android:layout_height="49dp"
                android:layout_marginTop="5dp"
                android:background="#FFFF"
                android:ellipsize="marquee"
                android:maxLines="4"
                android:text="10.99"
                android:textColor="#0F0000"
                android:textSize="17sp"
                android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:layout_marginStart="60dp"
                    android:id="@+id/removeitem"
                    android:text="Remove item"
                    android:textColor="#120000"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



